{
    "version": 4,
    "configurations": [
      {
        "name": "Win32",
        "includePath": [
          "${workspaceFolder}/**",  // This will include all files in your project folder
          "C:/MinGW/lib/gcc/mingw32/6.3.0/include",  // GCC standard header files
          "C:/MinGW/lib/gcc/mingw32/6.3.0/include/c++",  // C++ standard library headers
          "C:/MinGW/include",  // MinGW-specific headers
          "C:/MinGW/lib/gcc/mingw32/6.3.0/include-fixed"  // Fixed include headers for GCC
        ],
        "defines": [],
        "intelliSenseMode": "gcc-x86",  // Change to match your compiler
        "compilerPath": "C:/MinGW/bin/gcc.exe",  // Path to your GCC compiler
        "cStandard": "c11",  // C standard (adjust as needed)
        "cppStandard": "c++17",  // C++ standard (optional for C projects)
        "browse": {
          "path": [
            "${workspaceFolder}",  // Adds your project folder for browsing
            "C:/MinGW/include",  // Add MinGW include folder for browsing
            "C:/MinGW/lib/gcc/mingw32/6.3.0/include"  // Add GCC include folder for browsing
          ],
          "limitSymbolsToIncludedHeaders": true
        }
      }
    ]
}
